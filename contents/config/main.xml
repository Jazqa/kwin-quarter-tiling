<?xml version="1.0" encoding="UTF-8"?>
<kcfg xmlns="http://www.kde.org/standards/kcfg/1.0"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.kde.org/standards/kcfg/1.0
      http://www.kde.org/standards/kcfg/1.0/kcfg.xsd" >
    <kcfgfile name=""/>
    <group name="">
    	<entry name="gap" type="int">
		  <label>Pixels between the windows and screen edges</label>
		  <default>8</default>
		</entry>
    <entry name="numDesks" type="int">
      <label>Initial number of desktops</label>
      <default>2</default>
    </entry>
    <entry name="ignoredScreens" type="string">
      <label>Ignored Screens</label>
      <default></default>
    </entry>
    <entry name="ignoredDesktops" type="string">
      <label>Ignored Desktops</label>
      <default></default>
    </entry>
    <entry name="ignoredActivities" type="string">
      <label>Ignored Desktops</label>
      <default></default>
    </entry>
    <entry name="autoSize" type="int">
      <label>Automatically optimize available space</label>
      <default>2</default>
    </entry>
    <entry name="centerTo" type="int">
      <label>Tile small clients to the center of the tile instead of the center of the screen</label>
      <default>1</default>
    </entry>
    <entry name="mt" type="int">
      <label>Top margin</label>
      <default>0</default>
    </entry>
    <entry name="mb" type="int">
      <label>Bottom margin</label>
      <default>1</default>
    </entry>
    <entry name="ml" type="int">
      <label>Left margin</label>
      <default>0</default>
    </entry>
    <entry name="mr" type="int">
      <label>Right margin</label>
      <default>0</default>
    </entry>
    <entry name="ignoredClients" type="string">
  	  <label>Programs that should be ignored by the script (f.ex. "kate", "steam")</label>
  	  <default>wine, steam, kate</default>
    </entry>
    <entry name="ignoreJava" type="int">
      <label>Ignores all Java programs if set to true</label>
      <default>0</default>
    </entry>
    <entry name="ignoredCaptions" type="string">
  	  <label>(Parts of) Window captions that should be ignored by the script (f.ex "move to trash")</label>
  	  <default></default>
    </entry>
    <entry name="fixedClients" type="string">
      <label>Clients that are aligned (position) but not resized with the layout</label>
      <default>telegram, telegram-desktop, telegramdesktop</default>
    </entry>
   	</group>
</kcfg>
